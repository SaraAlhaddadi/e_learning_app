<div class="flex justify-center">
  <div class="w-full">
    <div class="flex">
      <div class="w-full bg-white rounded-l-lg p-4">
        <h2 class="text-3xl font-bold mb-4">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "space-y-4" }) do
          |f| %>
          <%= render "devise/shared/error_messages" , resource: resource %>

            <div class="space-y-2">
              <%= f.label :name, class: "text-lg" %>
                <%= f.text_field :name,
                  class: "w-full px-4 py-2 border border-gray-300 rounded" %>
            </div>

            <div class="space-y-2">
              <%= f.label :email, class: "text-lg" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" ,
                  class: "w-full px-4 py-2 border border-gray-300 rounded" %>
            </div>

            <div class="space-y-2">
              <%= f.label :password, class: "text-lg" %>
                <% if @minimum_password_length %>
                  <em class="text-sm">(Minimum <%= @minimum_password_length %> characters)</em>
                  <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" ,
                      class: "w-full px-4 py-2 border border-gray-300 rounded" %>
            </div>

            <div class="space-y-2">
              <%= f.label :password_confirmation, class: "text-lg" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" ,
                  class: "w-full px-4 py-2 border border-gray-300 rounded" %>
            </div>

            <div class="my-5">
              <%= f.label :role, class: "text-lg" %>
                <%= f.select :role, User.roles.keys.reject{|r| r=='admin' }.map { |role| [role.capitalize, role] }, {},
                  class: "w-full px-4 py-2 border border-gray-300 rounded" %>
            </div>

            <div class="space-y-2">
              <%= f.label :avatar , class: "text-lg" %>
                <%= f.file_field :avatar , class: "w-full px-4 py-2 border border-gray-300 rounded" %>
            </div>

            <div>
              <%= f.submit "Sign up" , class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded"
                %>
            </div>
            <% end %>
      </div>
      <div class="w-1/2 bg-gray-100 rounded-r-lg p-8">
        <img src="/path/to/image.jpg" alt="Image" class="w-full h-full object-cover rounded-r-lg">
      </div>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
    <% end %>

      <% content_for :title, "Lessons" %>

        <div class="flex justify-between items-center">
          <h1 class="font-bold text-4xl">Lessons</h1>
          <% if current_user && (current_user.admin? || (current_user.teacher? && current_user==@course.instructor)) %>
            <%= link_to "New lesson" , new_course_lesson_path(@course.id),
              class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
              <% end %>
        </div>

        <div id="lessons" class="min-w-full">
          <% @lessons.each do |lesson| %>
            <%= render lesson %>
              <p>
                <%= link_to "Show this lesson" , [@course, lesson],
                  class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
              </p>
              <% end %>
        </div>

        <%= link_to "Back to course", course_path(@course), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>